<div class="container">
	<div class="row">
		<div>
			<ul>
				<h2>タイトル: <%= $title %></h2>
				<form class="mb-4" action="/title" method="post">
                	<input type="text" name="title" placeholder="タイトルを入力" value="<%= @title %>"><br>
                	<input class=btn-secondary type="submit" value="タイトルを変更">
                	<br><a href="/signin">サインイン</a>
            	</form>
			</ul>
		</div>
		<div class="col-lg-10">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>日づけ</th>
						<th>時間</th>
						<th>場所</th>
						<th>スケジュール</th>
						<th>備考</th>
						<th>削除</th>
						<th>編集</th>
					</tr>
				</thead>
			    <tbody>
					<% @schedules.each do |schedule| %>
						<tr>
							<td><%= CGI.escapeHTML(schedule.date) %></td>
							<td><%= schedule.time.strftime( "%H:%M" ) %></td>
							<td><%= schedule.place %></td>
							<td><%= schedule.schedule %></td>
							<td><%= schedule.note %></td>
							<td>
								<form action="/schedules/<%= schedule.id %>/delete" method="post">
									<input type="submit" value="削除">
								</form>
							</td>
							<td>
								<a href="/schedules/<%= schedule.id %>/edit">編集</a>
							</td>
						</tr>
					<% end %>
					<tr>
					    <td colspan="7"><a href="/schedules/new">スケジュールを作成</a></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>